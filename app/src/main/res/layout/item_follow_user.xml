<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <TextView
        android:id="@+id/textview_repository_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Repository name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textview_repository_explanation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Repository Explanation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_repository_name"/>

    <TextView
        android:id="@+id/textview_repository_langauge"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Repository Language"
        app:layout_constraintTop_toBottomOf="@id/textview_repository_explanation"
        app:layout_constraintStart_toStartOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>